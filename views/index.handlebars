<div id="top-container" class="container-fluid">
        
        <h1 id="main-title" class="text-center">Find the job of your dreams!</h1>
        <p id="main-subtitle" class="text-center">This is the best site for you to find a new job in I.T, we're focused on helping people to find a new path in their careers.</p>
        
        <form id="search-form" class="row" action="/" method="GET">
            
            <div class="form-group col-md-10">
                <input type="text" class="form-control" id="job" name="job" placeholder="Type the job opportunity you're looking for...">
            </div>
            
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>

        </form>
        
    </div>

    <main>
        <div id="jobs-container" class="container">
            <div class="row">
                <div class="col-md-12">

                    {{#if search}}
                    <h2 id="job-list-title">Searching job offers that contains: {{search}}</h2>
                    {{else}}
                    <h2 id="job-list-title">Check our best jobs offers!</h2>
                    {{/if}}

                    <ul id="job-list" class="list-group">
                        
                        {{#each jobs}}

                        <li class="list-group-item {{#if dataValues.new_job}} new-job {{/if}}">
                            <img src="/img/job-icon.png" alt="Company">
                            <p>{{dataValues.company}}</p>
                            <h2>{{dataValues.title}}</h2>
                            <p>U$ {{dataValues.salary}}</p>
                            <span class="new-job-label">New</span>
                            <a href="/jobs/view/{{dataValues.id}}" class="btn btn-primary">Check job</a>
                        </li>

                        {{/each}}

                    </ul>
                </div>
            </div>
        </div>
    </main>